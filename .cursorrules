{
  "postPromptCommands": [
    "npm test"
  ],
  "testingRules": {
    "requireTestsForNewFunctions": true,
    "testFileNamingConvention": "{componentName}.test.tsx",
    "testCoverageRequirements": {
      "statements": 80,
      "branches": 80,
      "functions": 80,
      "lines": 80
    }
  },
  "testFileStructure": {
    "describe": "Component/Function name",
    "it": "Should describe the expected behavior",
    "testCases": [
      "Happy path scenarios",
      "Edge cases",
      "Error cases"
    ]
  }
} 